<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/tx_day"
            android:layout_alignParentLeft="true"
            android:text="day"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/tx_time"
            android:layout_toRightOf="@+id/tx_day"
            android:text="time"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/tx_input_glucose"
            android:layout_toRightOf="@+id/tx_time"
            android:text="input_glucose"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/tx_input_insulin"
            android:layout_toRightOf="@+id/tx_input_glucose"
            android:text="input_insulin"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tx_input_note"
            android:layout_alignParentLeft="true"
            android:text="input_note"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"

            />
    </LinearLayout>

</RelativeLayout>